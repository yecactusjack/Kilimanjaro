run = "run"
modules = ["nodejs-20"]
[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "static"
publicDir = "out"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Run"
author = 32621205

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 3000 -H 0.0.0.0"

[[workflows.workflow]]
name = "Start Dev Server"
author = 32621205

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 3000 -H 0.0.0.0"

[[workflows.workflow]]
name = "Next.js Dev"
author = 32621205

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 3001 -H 0.0.0.0"

[[workflows.workflow]]
name = "Dev Server"
author = 32621205

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "kill -9 $(lsof -t -i:3000) 2>/dev/null || true && npm run dev"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001
